@{
   
}
@model IEnumerable<Workfromhell.Models.db.Employee>
<h1 class="display-1">You are the drug that I addictted to</h1>
<a asp-action="Create">Create New</a>
<table class="table table-responsive">
    <thead>
        <tr>
            <th>EmployeeID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Age</th>
            <th>Salary</th>
            <th>Joined</th>
            <th>Details</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.EmployeeId </td>
                <td>@item.Name </td>
                <td>@item.Lastname </td>
                <td>@item.Age </td>
                <td>@item.Salary </td>
                <td>@item.Joined </td>
                <td><a asp-action="Detail" asp-route-id="@item.EmployeeId">Details</a></td>
                <td><a asp-action="Edit" asp-route-id="@item.EmployeeId">Edit</a></td>
                <td>  <form method="post" asp-action="Delete">
                   
                    <input type="hidden" name="id" value="@item.EmployeeId" />
                    <button type="submit" class="">Delete</button>
                </form></td>
            </tr>
        }
    </tbody>
</table>
